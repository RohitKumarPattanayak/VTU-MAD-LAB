<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#B5DC88"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="PHONE"
        android:textSize="45dp"
        android:textStyle="bold"
        android:textColor="#4CAF50"
        />

    <EditText
        android:id="@+id/dialed_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#B5DC88"
        android:textSize="30dp"
        android:textStyle="bold"
        android:gravity="center"
        android:hint="Type phone number"/>
    <View
        android:layout_marginTop="7dp"
        android:id="@+id/divider"
        android:layout_width="270dp"
        android:layout_height="4dp"
        android:layout_marginBottom="60dp"
        android:background="@color/black" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#4CAF50"
            android:onClick="btn_1"
            android:text="1"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:onClick="btn_2"
            android:backgroundTint="#4CAF50"
            android:text="2"/>
        <Button
            android:layout_width="60dp"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"
            android:onClick="btn_3"
            android:backgroundTint="#4CAF50"
            android:text="3"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:onClick="btn_4"
            android:backgroundTint="#4CAF50"
            android:text="4"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:onClick="btn_5"
            android:backgroundTint="#4CAF50"
            android:text="5"/>
        <Button
            android:layout_width="60dp"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content"
            android:onClick="btn_6"
            android:backgroundTint="#4CAF50"
            android:text="6"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:onClick="btn_7"
            android:backgroundTint="#4CAF50"
            android:text="7"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:onClick="btn_8"
            android:backgroundTint="#4CAF50"
            android:text="8"/>
        <Button
            android:layout_width="60dp"
            android:layout_marginLeft="30dp"
            android:onClick="btn_9"
            android:layout_height="wrap_content"
            android:backgroundTint="#4CAF50"
            android:text="9"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:onClick="btn_star"
            android:backgroundTint="#4CAF50"
            android:text="*"/>
        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:onClick="btn_0"
            android:layout_marginLeft="30dp"
            android:backgroundTint="#4CAF50"
            android:text="0"/>
        <Button
            android:layout_width="60dp"
            android:layout_marginLeft="30dp"
            android:onClick="btn_hash"
            android:layout_height="wrap_content"
            android:backgroundTint="#4CAF50"
            android:text="#"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="btn_save"
            android:backgroundTint="#0BD313"
            android:text="save"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:onClick="btn_call"
            android:backgroundTint="#FF5722"
            android:text="call"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_marginLeft="30dp"
            android:onClick="btn_clear"
            android:layout_height="wrap_content"
            android:backgroundTint="#72CF76"
            android:text="clear"/>
    </LinearLayout>

</LinearLayout>